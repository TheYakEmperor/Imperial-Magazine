---
import BaseLayoutArchive from "../../../../layouts/BaseLayoutArchive.astro";
const pageTitle="Solid Gold Chartbusters";
const allPosts = await Astro.glob('./article/*/*.md');
---
<BaseLayoutArchive title={pageTitle}>
	<ul style="font-size:15px;" class="truenobullets">
		{allPosts.sort((postA, postB) => (new Date(postB.frontmatter.pubDate) - new Date(postA.frontmatter.pubDate)))
		.map((post) => 
		<li>
          <a href={post.url}><img src={post.frontmatter.thumb} style="height:125px;width:auto;padding-left:5px;"></a>
		  <p style="margin-top:0;margin-bottom:0;"><a href={post.url}>{post.frontmatter.title}</a></p>
		  <p style="margin-top:0;margin-bottom:0;">{post.frontmatter.description}</p>
		  <p style="margin-top:0;margin-bottom:20px;color:#757575;font-size:12px;">{post.frontmatter.author}, {post.frontmatter.pubDate}</p>
		</li>)}
	</ul>
</BaseLayoutArchive>