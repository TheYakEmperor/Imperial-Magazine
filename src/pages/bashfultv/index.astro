---
import BaseLayoutArchive from "../../layouts/BaseLayoutArchive.astro";
const pageTitle="The Idiot Box";
const allPosts = await Astro.glob('./pub/*/*/*/*.md');
---
<BaseLayoutArchive title={pageTitle}>
    <ul style="font-size:15px;padding-bottom:0;padding-top:0;">
        {allPosts.map((post) => 
        <li>
          <p><a href={post.url}>{post.frontmatter.title}</a></p>
          <p style="color:#757575;font-size:12px;">{post.frontmatter.author}, {post.frontmatter.pubDate}</p>
          <p>{post.frontmatter.description}</p>
        </li>)}
    </ul>
  <p><a href="archive">Archive</a></p>
</BaseLayoutArchive>