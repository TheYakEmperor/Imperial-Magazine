---
import BaseLayoutArchive from "../layouts/BaseLayoutArchive.astro";
const pageTitle="Home";
const allPosts = await Astro.glob('./*/*/*/*/*/*.md');
---
<BaseLayoutArchive title={pageTitle}>
	<p>Well fuck, I'm not really sure what to put here.</p>
	<ul style="font-size:15px;" class="truenobullets">
		{allPosts.sort((postA, postB) => (new Date(postB.frontmatter.pubDate) - new Date(postA.frontmatter.pubDate)))
		.map((post) => 
		<li>
          <img src={post.frontmatter.thumb} style="height:125px;width:auto;padding-left:5px;">
		  <p style="margin-top:0;margin-bottom:0;font-size:12px;">
			<a href={post.frontmatter.puburl} style="color:#757575;text-decoration:none;">{post.frontmatter.pub}</a>
		  </p>
		  <p style="margin-top:0;margin-bottom:0;"><a href={post.url}>{post.frontmatter.title}</a></p>
		  <p style="margin-top:0;margin-bottom:0;">{post.frontmatter.description}</p>
		  <p style="margin-top:0;margin-bottom:20px;color:#757575;font-size:12px;">{post.frontmatter.author}, 
			{post.frontmatter.pubDate}</p>
		</li>)}
	</ul>
</BaseLayoutArchive>