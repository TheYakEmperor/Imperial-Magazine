---
import BaseLayoutArchive from "../layouts/BaseLayoutArchive.astro";
const pageTitle="Home";
const allPosts = await Astro.glob('./*/*/*/*/*/*.md');
---
<BaseLayoutArchive title={pageTitle}>
	<table style="font-size:15px;">
		{allPosts.map((post) => 
		<tr>
		  <td><img src={post.frontmatter.thumb} style="height:125px;width:auto;" class="center"></td>
		  <td>
		  <p style="margin-bottom:0;color:#757575;font-size:12px;">{post.frontmatter.pub}</p>
		  <p style="margin-top:0;margin-bottom:0;"><a href={post.url}>{post.frontmatter.title}</a></p>
		  <p style="margin-top:0;margin-bottom:0;">{post.frontmatter.description}</p>
		  <p style="margin-top:0;color:#757575;font-size:12px;">{post.frontmatter.author}, {post.frontmatter.pubDate}</p>
		  </td>
		</tr>)}
	</table>
  </BaseLayoutArchive>