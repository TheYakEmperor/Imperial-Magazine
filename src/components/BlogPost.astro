---
const {url, frontmatter} = Astro.props
---
    <li>
      <img src={frontmatter.thumb} style="height:125px;width:auto;padding-left:5px;">
      <p style="margin-top:0;margin-bottom:0;color:#757575;font-size:12px;">{frontmatter.pub}</p>
      <p style="margin-top:0;margin-bottom:0;"><a href={url}>{frontmatter.title}</a></p>
      <p style="margin-top:0;margin-bottom:0;">{frontmatter.description}</p>
      <p style="margin-top:0;margin-bottom:20px;color:#757575;font-size:12px;">{frontmatter.author}, {frontmatter.pubDate}</p>
    </li>)